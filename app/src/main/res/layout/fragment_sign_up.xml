<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.SignUpFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"

        android:src="@drawable/back_btn"
        android:contentDescription="@null"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/sign_up_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/back_btn"

        android:layout_marginTop="15dp"

        android:nestedScrollingEnabled="false"
        />

    <TextView
        android:id="@+id/wrong_input_guide_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/sign_up_vp"

        android:layout_marginHorizontal="15dp"

        android:text="아이디를 확인해주세요."
        android:textSize="16sp"
        android:textColor="@color/alert_text_color"

        app:drawableStartCompat="@drawable/warning_icon"

        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"

        android:text="@string/next_str"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"

        android:background="@color/toss_blue"
        android:padding="16dp"
        android:gravity="center"
        />



</androidx.constraintlayout.widget.ConstraintLayout>