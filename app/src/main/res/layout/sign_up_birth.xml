<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/pwd_guide_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"

        android:text="@string/birth_guide_str"
        android:textStyle="bold"
        android:textSize="28sp"

        android:maxLines="2"
        />

    <EditText
        android:id="@+id/pwd_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/pwd_guide_tv"
        app:layout_constraintStart_toStartOf="@id/pwd_guide_tv"
        app:layout_constraintEnd_toEndOf="@id/pwd_guide_tv"

        android:layout_marginTop="40dp"


        android:hint="@string/birth_str"
        android:textSize="22sp"

        android:inputType="none"
        android:maxLength="15"
        android:importantForAutofill="no"

        android:background="@null"
        />


</androidx.constraintlayout.widget.ConstraintLayout>